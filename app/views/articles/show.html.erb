<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li>
        <li><%= link_to(gravatar_for(@article.user), user_path(@article.user)) if @article.user %></li>
        <li class="article-title">
          <%= link_to(@article.user.username, user_path(@article.user)) if @article.user %>
        </li>
        <li><small><%= pluralize(@article.user.article.count, "article") if @article.user.article %></small></li>
      </div>
    </div>
  </ul>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>

  <div class="article-actions">
    <%= link_to 'view all', articles_path, class: "btn btn-xs btn-success" %>
  </div>
</div>